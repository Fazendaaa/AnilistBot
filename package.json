{
    "snyk": true,
    "license": "MIT",
    "version": "1.0.0",
    "name": "anilistbot",
    "main": "./dist/main.js",
    "author": "https://github.com/Fazendaaa/",
    "description": "A new code base to Anilist bot in Telegram.",
    "homepage": "https://github.com/Fazendaaa/AnilistBot#readme",
    "bugs": {
        "url": "https://github.com/Fazendaaa/AnilistBot/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Fazendaaa/AnilistBot.git"
    },
    "scripts": {
        "build": "webpack --config ./webpack.config.ts",
        "test": "npm run jest",
        "start": "npm run build && npm run bot",
        "doc": "typedoc --out ./docs/API/ ./src/",
        "ps": "heroku ps:stop worker --app=anilistbot",
        "counter": "cloc ./src/ --json > ./stats.json",
        "lint": "tslint --config tslint.json --project .",
        "deploy": "heroku container:push worker --app=anilistbot",
        "release": "heroku container:release worker --app=anilistbot",
        "heroku": "npm run build && npm run ps && npm run deploy && npm run release",
        "bot": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 --unhandled-rejections=strict ./dist/main.js",
        "jest": "jest --config jest.config.json --ci --runInBand --detectOpenHandles --forceExit --no-cache",
        "docker": "npm run bot"
    },
    "dependencies": {
        "ajv": "^6.5.4",
        "ajv-keywords": "^3.2.0",
        "city-timezones": "^1.0.5",
        "dotenv": "^6.0.0",
        "emoji-regex": "^7.0.1",
        "endeavor": "^2.3.0",
        "google-translate": "^2.2.0",
        "google-translate-open-api": "^1.3.2",
        "moment": "^2.22.2",
        "moment-timezone": "^0.5.21",
        "mongoose": "^5.9.2",
        "node-google-timezone": "^0.1.1",
        "node-schedule": "^1.3.0",
        "redis": "^2.8.0",
        "roman-numerals": "^0.3.2",
        "socks": "^2.2.1",
        "striptags": "^3.1.1",
        "telegraf": "^3.24.0",
        "telegraf-i18n": "^6.3.0",
        "telegraf-session-redis": "^5.0.0"
    },
    "devDependencies": {
        "@types/dotenv": "^4.0.3",
        "@types/graphql": "^0.13.4",
        "@types/jest": "^23.3.2",
        "@types/moment-timezone": "^0.5.9",
        "@types/mongoose": "^5.2.17",
        "@types/node": "^10.11.3",
        "@types/node-schedule": "^1.2.2",
        "@types/redis": "^2.8.6",
        "@types/webpack": "^4.4.13",
        "app.json": "^1.3.0",
        "cloc": "^2.3.4",
        "codecov": "^3.7.1",
        "debug": "^4.0.1",
        "husky": "^0.14.3",
        "jest": "^23.6.0",
        "mime": "^2.3.1",
        "qs": "^6.5.2",
        "snyk": "^1.297.3",
        "superagent": "^3.8.3",
        "telegram-typings": "^4.0.0-beta",
        "ts-jest": "^23.10.3",
        "ts-loader": "^4.5.0",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "tslint-microsoft-contrib": "^5.2.1",
        "typedoc": "^0.16.11",
        "typescript": "^3.1.1",
        "webpack": "^4.41.6",
        "webpack-cli": "^3.1.2",
        "webpack-graphql-loader": "^1.0.0"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm test",
            "pre-commit": "npm run lint && npm run counter"
        }
    }
}
